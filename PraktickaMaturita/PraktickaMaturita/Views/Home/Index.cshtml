@{
    ViewData["Title"] = "Home Page";
}
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor;
@using Microsoft.AspNetCore.Http;
@model List<PraktickaMaturita.Models.Poznamka>;

@{
    string? prihlaseny = HttpContextAccessor.HttpContext.Session.GetString("Prihlaseny");
}
@if(prihlaseny == null)
{
    <div class="text-center">
        <h1 class="display-4">Vítejte!</h1>
        <p>Pokud chcete vytvářet poznámky <a asp-area="" asp-controller="Uzivatel" asp-action="Prihlasit">přihlašte se</a>, nebo si <a asp-area="" asp-controller="Uzivatel" asp-action="Registrovat">vytvořte účet</a>.</p>
    </div>
}
else
{
    @:<div class="text-center">
    @:<h1 class="display-4">Vítej zde, @prihlaseny</h1>
    @:</div>
    @:<a class="pridat" href="#">+ Přidat poznámku</a>
    @:<div id="poznamkovy-container">
        @if(Model == null || Model.Count == 0)
        {
            @: <p><i>Dosud nebyly přidány žádné poznámky.</i></p>
        }
        @foreach(PraktickaMaturita.Models.Poznamka poznamka in Model)
        {}
    @:</div>
}

